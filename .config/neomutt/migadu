## Recieve
set imap_user=bradley@bradleyeaton.com
source "$HOME/src/mutt-keyring/mutt-keyring.py get $imap_user |"
set folder=imaps://imap.migadu.com/
set spoolfile=+INBOX
set record=+Sent
set postponed=+Drafts
set imap_check_subscribed
unset imap_passive  
mailboxes ! 

## Send
set smtp_url=smtps://$imap_user@smtp.migadu.com
set realname = "Bradley Eaton"
set from=$imap_user
set ssl_force_tls=yes
unset ssl_starttls

account-hook $folder "set imap_user=${imap_user} imap_pass=${imap_pass}"
