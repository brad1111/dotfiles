## Recieve
set my_domain=soton.ac.uk
set imap_user="be1g19@$my_domain"
source "$HOME/src/mutt-keyring/mutt-keyring.py get $imap_user |"
set folder = imaps://outlook.office365.com/ 
set spoolfile = +INBOX
set record = "+Sent Mail"
set postponed = "+Drafts"
set trash="+Deleted Items"

## Send
set smtp_url=smtps://${imap_user}@smtp.office365.com
set realname="Bradley Eaton"
set from=$imap_user
set hostname=$my_domain
set ssl_force_tls=yes
set ssl_starttls=yes
#unset ssl_starttls

account-hook $folder "set imap_user=${imap_user} imap_pass=${imap_pass}"
